import psutil
import maadstml

def getlisterners():
      pidlist=psutil.pids()
      connections = psutil.net_connections()
      free=list()
      for c in connections:
            if c.status=="LISTEN":
                  p = psutil.Process(c.pid)
                  attrs=[p.name(),c.laddr.ip,c.laddr.port]
                  free.append(attrs)
      return free     

def broadcast(httptype):
     freelist=getlisterners() 
     freetml=list()
     
     for b in freelist:
          appname=b[0] 
          if b[1]=='0.0.0.0':
                b[1]="127.0.0.1"
          host=httptype+"://"+b[1]
          
          port=b[2]
          try:             
            if "mainhpd" in appname or "viper" in appname or "hpde" in appname:
              msg=maadstml.areyoubusy(host,port)
              if msg!=None:
                mlist=msg.split(",")
                if mlist[1]=="no":
                  freetml.append([mlist[0],host,port])                    
              
          except Exception as e:
            continue

     return freetml

def broadcast_getavailable_viper_hpde():      
  freetml1=broadcast("https")
  freetml2=broadcast("http")

  mainfreetml=freetml1 + freetml2
  return mainfreetml

available_viper_hpde_list=here=broadcast_getavailable_viper_hpde()
